<div class="notification-banner notification-banner__hidden" id="global-cookies-banner" role="alert">
    <p class="notification-banner--inner">
        <span id="cookie-message">
            NHS 111 uses cookies to make the site simpler. @Html.ActionLink("Find out more about cookies", "Cookies", "Help", null, new { target = "_blank", @id = "cookie-link" })
        </span>
        <i class="icon icon-close"></i>    
    </p>
</div>
<script>
    $(function() {
        var seenCookieMessage = $.cookie("nhs111_seen_cookie_message");
        if (!seenCookieMessage) $('#global-cookies-banner').css({ display: "block" });
        $('#cookie-link').click(function() {
            dismissCookieBanner();
        });
        $('.icon-close').click(function() {
            dismissCookieBanner();
        });

        function dismissCookieBanner() {
            var isSecure = window.location.protocol.toLowerCase() == 'https:';
            $.cookie("nhs111_seen_cookie_message", 1, { path: '/', expires: 28, secure: isSecure });
            $('#global-cookies-banner').hide();
        }
    });
</script>


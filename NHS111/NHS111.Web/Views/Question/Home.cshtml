@using NHS111.Models.Models.Web
@{
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";
}
@inherits NHS111.Web.Views.Shared.DisclaimerPopupView

@section Title {NHS 111 Online}

<div id="wrapper" class="home measure">
    @using (Html.BeginForm("Home", "Question", FormMethod.Post)) {
        @Html.HiddenFor(x => Model.SessionId)
        @Html.HiddenFor(x => Model.FilterServices)
        @Html.HiddenFor(x => Model.CurrentPostcode)

        <div class="header home">
            <h1 class="heading--large">Getting care with <span class="util-digits">1 1 1</span> online</h1>
        </div>

        <p>Use this service when:
            <ul>
                <li>you need medical help, but it's not a <span class="util-digits">9 9 9</span> emergency</li>
                <li>you don't know who to contact, or your normal service isn't available</li>
            </ul>
        </p>

        <h2 class="heading-medium">How does <span class="util-digits">1 1 1</span> work?</h2>
        <ol class="list--numbered">
            <li>
                Answer a series of questions about your symptoms
            </li>
            <li>
                You'll get advice on who you need to see, and how urgently
            </li>
            <li>
                We'll connect you to the right healthcare for your medical needs
            </li>
        </ol>
        <p>The service doesn't diagnose specific conditions.</p>


            <div class="callout callout--attention">
                <p><span class="util-digits">1 1 1</span> Online is being trialled in your area for patients aged 5 and over. This service is not a substitute for a medical consultation. See @Html.ActionLink("terms.", "Terms", "Help", null, new { target = "_blank" })</p>
            </div>

        <button type="submit" class="button--next go">Start now</button>

        <p>If you're looking for NHS opening times or contact information, use <a href="http://www.nhs.uk">NHS Choices.</a>
        </p>
    }
</div>

@section FeedbackSection {
    @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { UserId = Model.SessionId.ToString(), PageData = new PageDataViewModel() });
}